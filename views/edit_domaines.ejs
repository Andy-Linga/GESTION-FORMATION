<%- include('layout/header4') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Modifier le domaine (<%= domaine.libelle %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update_domaines/<%= domaine._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Code Domaine</label>
                            <input type="text" name="code_domaine" class="form-control form-control-lg" placeholder="Enter name"  value="<%= domaine.code_domaine %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="prenom">Libellé</label>
                            <input type="text" name="libelle" class="form-control form-control-lg" placeholder="Enter prenom" value="<%= domaine.libelle %>" required />
                        </div>                      
  
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Mettre à jour" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
