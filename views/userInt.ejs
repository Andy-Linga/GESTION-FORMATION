<%- include('layout/header') %>


<div class="container">
    
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %>"
                    role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>

            <% } %>
           <div class="table-responsive">
            <% if(isEmpty){ %>
                <h1 class="text-center text-secondary mt-5">Aucun participant rajouté !</h1>
            
             <% } else { %>
                <table class="table table-striped my-3">
                    <thead>
                        <tr class="table-dark  text-center">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Matricule</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>E-mail</th>
                            <th>Date de Naissance</th>
                            <th>Profile</th>
                            <th>Action</th>
    
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% users.forEach((row, index) => { %>
                           
                            <tr class="align-middle">
                                <td><%= index + 1 %></td>
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                <td><%= row.matricule %></td>
                                <td><%= row.name %></td>
                                <td><%= row.prenom %></td>
                                <td><%= row.email %></td>
                                <td><%= row.date %></td>
                                <td><%= row.profile ? row.profile.libelle : 'Aucun Profil' %></td> <!-- Affiche le libellé du profil -->
                                <td> 
                                    <a href="/edit/<%=row._id %>"class="text-sucess"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                   
                                    <a href="/delete/<%=row._id %>"class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>

                       <%  }) %>
                       
                    </tbody>
                </table>
              

             <% } %>

           </div> 
        </div>
    </div>
</div>

<%- include('layout/footer') %>

    
   
   
   
   
   
 