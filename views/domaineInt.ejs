<%- include('layout/header4') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %>"
                    role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
           <div class="table-responsive">
            <% if(isEmpty){ %>
               <h1 class="text-center text-secondary mt-5">Aucun Domaine rajouté</h1>
            <% } else { %>
                <table class="table table-striped my-3">
                    <thead>
                        <tr class="table-dark text-start">
                            <th>ID</th>
                            <th>Code</th>
                            <th>Libellé</th> <!-- Correction ici : Libellé était mal écrit dans la version précédente -->
                            <th>Action</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% domaines.forEach((row, index) => { %>
                            <tr class="align-middle text-start">
                                <td><%= index + 1 %></td> <!-- Correction ici pour afficher l'index correctement, +1 pour un affichage à partir de 1 -->
                                <td><%= row.code_domaine %></td>
                                <td><%= row.libelle %></td>
                                <td> 
                                    <a href="/edit_domaines/<%= row._id %>" class="text-success">
                                        <i class="fas fa-edit fa-lg mx-1"></i>
                                    </a>
                                    <a href="/delete_domaines/<%= row._id %>" class="text-danger">
                                        <i class="fas fa-trash fa-lg mx-1"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
           </div> 
        </div>
    </div>
</div>

<%- include('layout/footer') %>
