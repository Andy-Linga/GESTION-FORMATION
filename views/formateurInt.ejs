<%- include('layout/header2') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %>"
                    role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
           <div class="table-responsive">
            <% if(isEmpty){ %>
               <h1 class="text-center text-secondary mt-5">Aucun formateur rajouté</h1>
            <% } else { %>
                <table class="table table-striped my-3">
                    <thead>
                        <tr class="table-dark text-center">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Matricule</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Domaine</th>
                            <th>E-mail</th>
                            <th>Télephone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% formateurs.forEach((row, index) => { %>
                            <tr class="align-middle">
                                <td><%= index + 1 %></td>
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                <td><%= row.matricule %></td>
                                <td><%= row.name %></td>
                                <td><%= row.prenom %></td>
                                <td><%= row.domaine ? row.domaine.libelle : 'Aucun Domaine' %></td> <!-- Affiche le libellé du domaine -->
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td> 
                                    <a href="/edit_formateurs/<%=row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete_formateurs/<%=row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            
            <% } %>
           </div> 
        </div>
    </div>
</div>

<%- include('layout/footer') %>
