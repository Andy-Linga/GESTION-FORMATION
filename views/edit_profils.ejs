<%- include('layout/header3') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Modifier le profil (<%= profil.libelle %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update_profils/<%= profil._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="code_profil">Code Profil</label>
                            <input type="text" name="code_profil" class="form-control form-control-lg" placeholder="Enter code profil"  value="<%= profil.code_profil %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="libelle">Libellé</label>
                            <input type="text" name="libelle" class="form-control form-control-lg" placeholder="Enter libelle" value="<%= profil.libelle %>" required />
                        </div>                      
  
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Mettre à jour" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
