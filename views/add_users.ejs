<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Ajouter un nouveau participants</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Matricule</label>
                            <input type="text" name="matricule" class="form-control form-control-lg" placeholder="Enter matricule" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Prenom</label>
                            <input type="text" name="prenom" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required />
                        </div>
                        
                        <div class="mb-3">
                            <label for="profile">Profil</label>
                            <select name="profile" class="form-control form-control-lg" required>
                                <option value="" disabled selected>Choisir un profil</option>
                                <% profiles.forEach(profile => { %>
                                    <option value="<%= profile._id %>"><%= profile.libelle %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="date">Date de Naissance</label>
                            <input type="date" name="date" class="form-control form-control-lg" placeholder="Enter phone" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>

<%- include('layout/footer') %>

    
   
   
   
   
   
 